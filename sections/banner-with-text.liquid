<div class="
relative
overflow-hidden
{{ section.settings.banner_size }}
{% unless section.settings.full_width %}
  container
{% endunless %}
">
  {% comment %} IMAGE {% endcomment %}
  {% if section.settings.image %}
    {% comment %} define styles using image position value {% endcomment %}
    {% assign image_style = 'object-position: 0% ' | append: section.settings.image_position | append: '%' %}
    {{ section.settings.image | image_url: width: 2000 | image_tag: class: 'cover', style: image_style }}
  {% else %}
    {{ 'lifestyle-1' | placeholder_svg_tag }}
  {% endif %}


  {% comment %} TEXT {% endcomment %}
  <h1 class="absolute whitespace-nowrap top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-xl font-light uppercase">{{ section.settings.text }}</h1>

</div>

<style>
  img.cover {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
</style>

{% schema %}
  {
    "name": "Baner z tekstem",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Obrazek"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Tekst",
        "default": "Baner z tekstem"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Pełna szerokość",
        "default": false
      },
      {
        "type": "select",
        "id": "banner_size",
        "label": "Rozmiar",
        "default": "h-64",
        "options": [
          {
            "value": "h-32",
            "label": "Mały"
          },
          {
            "value": "h-64",
            "label": "Średni"
          },
          {
            "value": "h-96",
            "label": "Duży"
          }
        ]
      },
      {
        "type": "range",
        "id": "image_position",
        "label": "Pozycja obrazu",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 50,
        "unit": "%"
      }
    ],
    "presets": [
      {
        "name": "Baner z tekstem"
      }
    ]
  }
{% endschema %}