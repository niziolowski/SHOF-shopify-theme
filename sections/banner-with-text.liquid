<div class="
relative
flex
justify-{{ section.settings.text_position }}
items-center
{{ section.settings.banner_size }}
{% unless section.settings.full_width %}
  container
{% endunless %}
">
  <div class="absolute w-full h-full overflow-hidden">
    {% comment %} IMAGE {% endcomment %}
    {% if section.settings.image %}
      {% comment %} define styles using image position value {% endcomment %}
      {% assign image_style = 'object-position: 0% ' | append: section.settings.image_position | append: '%' %}
      {{ section.settings.image | image_url: width: 2000 | image_tag: class: 'cover', style: image_style }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag }}
    {% endif %}
  </div>


  {% comment %} TEXT {% endcomment %}
  <h1 class="relative font-medium m-10 z-10" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size}}px">{{ section.settings.text }}</h1>

</div>

<style>
  img.cover {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
</style>

{% schema %}
  {
    "name": "Baner z tekstem",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Obrazek"
      },
      {
        "type": "select",
        "id": "banner_size",
        "label": "Rozmiar",
        "default": "h-64",
        "options": [
          {
            "value": "h-32",
            "label": "Mały"
          },
          {
            "value": "h-64",
            "label": "Średni"
          },
          {
            "value": "h-96",
            "label": "Duży"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Pełna szerokość",
        "default": false
      },
      {
        "type": "range",
        "id": "image_position",
        "label": "Pozycja obrazu",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 50,
        "unit": "%"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Tekst",
        "default": "<p>Baner z tekstem</p>"
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Pozycja tekstu",
        "default": "start",
        "options": [
          {
            "value": "start",
            "label": "Lewo"
          },
          {
            "value": "center",
            "label": "Środek"
          },
          {
            "value": "end",
            "label": "Prawo"
          }
        ]
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Kolor tekstu",
        "default": "#cccccc"
      },
      {
        "type": "range",
        "id": "text_size",
        "label": "Rozmiar tekstu",
        "min": 20,
        "max": 150,
        "step": 5,
        "default": 20,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "Baner z tekstem"
      }
    ]
  }
{% endschema %}