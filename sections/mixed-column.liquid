<div class="section container items-center gap-10 grid grid-cols-1 sm:grid-cols-2">
  {% comment %} Left column {% endcomment %}
  <div class="flex flex-col gap-4 justify-self-center sm:justify-self-end">
    <h2 class="text-4xl text-primary font-normal">
      {{ section.settings.title }}
    </h2>
    <div>
      <p class="text-lg">
        {{ section.settings.content | rich_text }}
      </p>
    </div>
  </div>
  {% comment %} Right column {% endcomment %}
  <div class="justify-self-center sm:justify-self-start">
    {% if section.settings.image %}
      <div>
        {{ section.settings.image | image_url: width: 500, height: 500 | image_tag: class: 'cover' }}
      </div>
    {% else %}
      <div class="bg-gray-100">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Kolumna mieszana",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Obrazek"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Tytuł",
        "default": "Tytuł"

      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Treść",
        "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, voluptatum. Quisquam, voluptatum.</p>"
      }
    ],
    "presets": [
      {
        "name": "Kolumna mieszana",
        "settings": {}
      }
    ]
  }
{% endschema %}