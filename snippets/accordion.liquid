<div x-data="accordion" x-init="initialize({{data | json | escape}})" class=" {{class}} relative w-full mx-auto overflow-hidden bg-white divide-y divide-gray-400 rounded-md">
    <template x-for="item in data">
        <div x-data="{ id: $id('accordion') }" class="cursor-pointer group">
            <button @click="setActiveAccordion(id)" class="flex text-2xl tracking-widest items-center justify-center gap-4 w-full p-4 select-none group-hover:underline">
                <span x-text='item.title'></span>
                <svg class="w-4 h-4 duration-200 ease-out" :class="{ 'rotate-180': activeAccordion==id }" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
            </button>
            <div x-show="activeAccordion==id" x-collapse x-cloak>
                <div class="product-description p-4 pt-0 opacity-70 tracking-normal" x-html="item.content"></div>
            </div>
        </div>
    </template>
</div>

<style>
    .product-description strong,b {
        font-weight: 600;
    }
</style>