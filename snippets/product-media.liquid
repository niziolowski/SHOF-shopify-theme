{% assign width = width | default: 500 %}
{% assign height = height | default: 600 %}
{% case media.media_type %}
  {% when 'image' %}
    {{ media | image_url: width: width, height: height | image_tag: loading: 'lazy', class: class, id: id }}
  {% when 'video' %}
    {{ media | video_tag: controls: controls | default: false, class: class, id: id }}
  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'aspect-video w-full', id: id }}
  {% else %}
    {{ media | media_tag }}
{% endcase %}