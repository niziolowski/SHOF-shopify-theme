<div class="flex items-start p-1">
  <div class="flex items-center h-5">
    <input
      {{ model }}
      {{ checked }}
      {{ id }}
      {{ click }}
      {{ value }}
      {{ name }}
      type="checkbox"
      class="hidden peer"
      required>
    <label {{ for }} class="
      peer-checked:[&_svg]:scale-100
      hover:text-primary
      text-base
      font-normal
      text-neutral-600
      peer-checked:font-medium
      [&_svg]:scale-0
      peer-checked:[&_.custom-checkbox]:border-primary
      peer-checked:[&_.custom-checkbox]:bg-primary
      select-none
      flex
      items-center
      space-x-2
      cursor-pointer">
      <span class="flex items-center justify-center w-5 h-5 border-2 border-primary rounded custom-checkbox text-neutral-900">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="3"
          stroke="currentColor"
          class="w-3 h-3 text-white duration-300 ease-out">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      </span>
      <span {{ text }}>{{ content }}</span>
    </label>
  </div>
</div>